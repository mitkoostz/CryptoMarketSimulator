
@{
    ViewBag.Title = "Analytics";
}
@model ICollection<Coin>
<link href="~/Content/StatisticTable.css" rel="stylesheet" />

<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<body id="StatisticePage">


    <br />
    <table class="table table-borderless">
        <thead>
            <tr>
                <th>Currency</th>
                <th>USD</th>
                <th>BTC</th>

                <th>Change(24h)</th>
            </tr>
        </thead>
        <tbody>
            @{ var BTC = CoinValues.GetBtcValue().Price; }
            @foreach (var coin in Model)
            {
                <tr>
                    <td>@coin.Name</td>
                    <td>@coin.Price$</td>
                    <td>@string.Format("{0:0.########}", (coin.Price / BTC)) BTC</td>
                    @if (coin.Change24.Contains("-"))
                    {
                        <td class="percent" style="color:red">@coin.Change24</td>
                    }
                    else
                    {
                        <td class="percent" style="color:green">@coin.Change24</td>

                    }

                </tr>

            }

        </tbody>
    </table>



</body>

