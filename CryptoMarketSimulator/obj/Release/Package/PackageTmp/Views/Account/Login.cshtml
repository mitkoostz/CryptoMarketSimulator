
@{
    ViewBag.Title = "Login";
}
@model CryptoMarketSimulator.Models.LoginViewModel
<link href="~/Content/Login.css" rel="stylesheet" />

<script src="~/Scripts/jquery-3.2.1.min.js"></script>

<script>



    function validateForm() {

        if ($("#Username").val() == "") {
            $("#emailerror").show();


            return false;
        }
        if ($("#passwordfield").val() == "") {
            $("#passworderror").show();
            return false;
        }

        return true;

    };


</script>

<body id="mainBody">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="wrap">
                    <p class="form-title" style="text-align:center;">
                        SIGN IN
                        <br />
                        @{
                            if (ViewBag.InvalidLogin == true)
                            {
                                <b style="color:red; font:24px bold arial">Invalid Login</b>
                            }
                        }

                    </p>

                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login", @onsubmit = "return validateForm()" }))
                    {
                        @Html.AntiForgeryToken()



                        <input type="text" id="Username" name="Username" placeholder="Username" />
                        <b class="text-danger" , hidden id="emailerror" style="background-color:rgba(0, 0, 0, 0.8);">
                            Username field is required.
                        </b>

                        @*<b>@Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger", @id = "emailerror", @style = "background-color:rgba(0, 0, 0, 0.4);" })</b>*@


                        <input type="password" id="passwordfield" name="Password" placeholder="Password" />
                        <b class="text-danger" , hidden id="passworderror" style="background-color:rgba(0, 0, 0, 0.8);">
                            Password field is required.
                        </b>

                        @*<b>@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", @id = "passworderror", @style = "background-color:rgba(0, 0, 0, 0.4);" })</b>*@

                        <input type="submit" value="Sign In" id="ButtonLogin" class="btn btn-success btn-sm" />
                        <a href="/Account/Register" id="register" style="color:rgba(255, 255, 255,0.4);">REGISTER</a>
                        <br />
                        <a href="#" style="color:rgba(255, 255, 255,0.4);">FORGOT PASSWORD</a>


                    }




                </div>
            </div>
        </div>
    </div>
</body>

